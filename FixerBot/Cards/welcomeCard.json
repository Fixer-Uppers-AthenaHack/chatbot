{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "items": [
            {
              "type": "TextBlock",
              "text": "Hi, I'm Eitri from Fixer Upper",
              "weight": "Bolder",
              "size": "Medium",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "I'm here to help you with your fix. ",
              "isSubtle": true,
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "First, describe the item that we're working on today.",
              "isSubtle": true,
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": 1,
          "items": [
            {
              "type": "Image",
              "size": "auto",
              "url": "www.example.com/avatar.png"
            }
          ]
        }
      ]
    }
  ]
}